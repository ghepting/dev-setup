#!/usr/bin/env zsh

ZSHRC_FILE="$HOME/.zshrc"

# colors
RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
BLUE="\e[34m"
MAGENTA="\e[35m"
CYAN="\e[36m"
WHITE="\e[37m"
NC="\e[0m" # No Color (Reset)

RESTART_REQUIRED=false

# source utility functions
source "./lib/brew.sh"
source "./lib/ruby.sh"
source "./lib/python.sh"
source "./lib/node.sh"
source "./lib/packages.sh"

# homebrew
install_homebrew

# homebrew path
install_homebrew_path

# brew packages
install_brew_bundle

# ruby and rbenv
install_rbenv_and_ruby

# python and pyenv
install_pyenv_and_python

# node/npm, and nvm
install_nvm_and_node

# global npm packages
install_global_npm_packages

echo -e "${GREEN}Dev setup completed successfully${NC}"
if $RESTART_REQUIRED
then
  echo -e "${GRAY}New utilities have been installed. Please restart your terminal to activate them.${NC}"
fi
exit 0
