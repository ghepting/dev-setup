#!/usr/bin/env zsh
# Bootstrap script for repository contributors
# This script installs development dependencies required for working ON dev-setup.

# source variables and utility functions
source "./lib/core/vars.sh"
source "./lib/core/utils.sh"

log_info "Bootstrapping dev-setup repository..."

# Install core dev dependencies
# - bats-core: test runner
deps=("bats-core")

for dep in "${deps[@]}"; do
  install_pkg "$dep"
done

# Ensure hooks are set up
if [ -d ".git" ]; then
  log_info "Configuring git hooks..."
  git config core.hooksPath .hooks
  log_success "Git hooks configured to .hooks"
fi

log_success "Repository bootstrapped successfully!"
log_info "You are now ready to contribute to dev-setup."
