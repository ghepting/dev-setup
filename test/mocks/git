#!/usr/bin/env zsh
echo "MOCKED: git $@"
# Handle clone specifically to avoid errors if scripts check for directory existence
if [[ "$1" == "clone" ]]; then
  repo="$2"
  dir="$3"
  # If dir is empty (remote repo only), use basename of repo
  if [[ -z "$dir" ]]; then
    dir=$(basename "$repo" .git)
  fi
  mkdir -p "$dir"
fi
